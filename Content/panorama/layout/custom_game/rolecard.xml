<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/rolecard.css" />
		<include src="file://{resources}/styles/dotastyles.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/rolecard.js" />
	</scripts>
	<Panel class="rolecard" onactivate="ShowRolecard()">
		<Panel class="rolecard-header">
			<Label class="rolecard-header-text" text="Your role" />
			<Label class="rolecard-close-button" text="close [X]" onactivate="HideRolecard()" />
		</Panel>
		<Panel class="rolecard-body">
			<Label class="rolecard-rolename" text="Please wait..." />
			<Label class="rolecard-description" />
			<Label class="rolecard-allies" />
			<Label class="rolecard-win-condition" />
		</Panel>
	</Panel>
</root>